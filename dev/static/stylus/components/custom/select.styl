.select-gl
  width 100%
  margin-bottom 10px
  &__this
    width 100%
    position relative
  &__value
    padding 0
    position relative
    size(100%, 45px)
    display flex
    justify-content flex-start
    align-items center
    border none
    background #FFFFFF
    &::after
      content ""
      position absolute
      width: 100%;
      height: 3px;
      bottom: 0;
      left 0
      background: #0F0F0F;
  &__drop
    size(23px)
    fill black
    position absolute
    right 0
    top center
    transition()
  &__list
    overflow hidden
    display none
    width 100%
    position absolute
    top calc(100% + 2px)
    left 0
    border 1px solid white
    background #FFFFFF
    z-index 15
    &::after
      content ""
      position absolute
      width: 100%;
      height: 3px;
      bottom: 0;
      left 0
      background: #0F0F0F;
  &__item
    padding 5px 0
    width 100%
    display flex
    justify-content flex-start
    align-items center
    cursor pointer
    transition()
  .selected
    color lightgrey
  .select__active
    padding 0
    .select-gl__drop
      transform rotate(-180deg)
  .text_18
    font-weight: bold;
    line-height: 22px;
    letter-spacing: 0.07em;
    color: #0F0F0F;
  .text_20
    font-weight: bold;
    line-height: 22px;
    letter-spacing: 0.07em;
    color: #0F0F0F;

.select-gl.size
  width 60%
  button.select-gl__value.select__active, button.select-gl__value, ul.select-gl__list
    background #FAFAFA

.select-placeholder
  width 70%
  padding-bottom: 10px;
  li.select-gl__item:first-child
    display none

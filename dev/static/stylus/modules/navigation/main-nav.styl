.nav
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 50px;
  position relative

  &__item
    width: auto
    height: 111px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding 0 40px

    &:hover .nav__menu-client, &:hover .nav__menu-complect, &:hover .nav__menu-catalog
      visibility visible
      opacity: 1;
    &:hover
      background-color baseBlack
    &:hover > a > svg
      transform rotate(-180deg)

  &__link
    font-weight: 500;
    line-height: 22px;
    letter-spacing: 0.07em;
    color baseWhite
    display: flex;
    justify-content: center;
    align-items: center;
    &:hover
      color baseWhite

  svg
    size(20px)
    fill baseWhite
    margin-left: 15px;

  &__menu-client
    visibility hidden
    opacity 0
    display flex
    position absolute
    top 111px
    left 50px
    box-shadow: 0px 102px 124px rgba(0, 0, 0, 0.25);

  &__menu-complect
    visibility hidden
    opacity 0
    display flex
    position absolute
    top 111px
    left center
    box-shadow: 0px 102px 124px rgba(0, 0, 0, 0.25);

  &__cell
    width: 337px;
    height: 180px;
    a
      display flex
      width 100%
      height: 100%;
      justify-content: center;
      align-items: center;
      flex-direction column
      background-color baseWhite
      &:hover
        background-color #E7E7E7
        span
          color baseWhite
        svg
          fill baseWhite
      span
        display inline-block
        font-weight: 500;
        line-height: 24px;
        text-align: center;
        letter-spacing: 0.07em;
        color: #878787;
      svg
        fill #B2B2B2;
        margin 0 0 30px 0
        size(50px)

  &__cell:not(:last-child)
    border-right 1px solid #E7E7E7
    &:hover
      background-color #E7E7E7
      span
        color baseWhite
      svg
        fill baseWhite

  &__menu-catalog
    width: 1700px;
    height: auto;
    visibility hidden
    opacity 0
    display block
    position absolute
    top 111px
    left 50px
    background-color baseWhite
    padding 30px 50px
    box-shadow: 0px 102px 124px rgba(0, 0, 0, 0.25);
  &__buttons
    width: 70%;
    display: flex;
    justify-content space-between
    border-bottom 1px solid #878787
    padding-bottom 30px
  &__clothes
    width 76%
  &__box
    width 100%
    &-main
      width 100%
      display flex
  &__box:not(:first-child)
    display none

  &__outerwears, &__pants, &__accessories
    width 33%
    display flex
    flex-direction column
    a.text_24
      font-weight: bold;
      line-height: 29px;
      color: #000000;
      padding 30px 0 30px
    a.text_18
      line-height: 22px;
      color: #666666;
      padding-bottom 20px



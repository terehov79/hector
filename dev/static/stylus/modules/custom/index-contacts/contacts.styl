ul.production__prod
  width 100%
  li.production__item.item2
    width 88%
    padding-top: 30px;
    border-bottom 1px solid #B2B2B2;
    svg
      size(60px)
  li.production__item
    width 100%
    padding 15px 15px 15px 0
    display flex
    justify-content: flex-start;
    align-items: center;
    span.text_24
      font-weight: bold;
      line-height: 29px;
      letter-spacing: 0.07em;
      color: #000000;
    svg
      size(40px)
    p.text_18
      line-height: 22px;
      letter-spacing: 0.07em;
      color: #000000;
      padding-left 30px
    a.text_18
      font-weight: bold;
      line-height: 22px;
      letter-spacing: 0.07em;
      color: #000000;
      padding-left 30px

.contacts
  width 100%
  padding 0 100px 100px
  &--wrap
    width 100%
  &__zag
    display flex
    justify-content: center;
  &__map
    width 100%
  &__info
    width 100%
    padding 50px 0
    .production
      width 100%
    .production2, .production3
      margin-left 70px
    .production__block
      display: flex;
      flex-direction: column
      justify-content: center;
    .production__block2
      margin-top 15px
      display: flex;
      flex-direction: row
    .info2
      text-align center
      p.text_24
        padding 50px 0
        font-weight: normal;
        line-height: 29px;
        letter-spacing: 0.07em;
        color: #000000;
      p.text_36
        font-weight: bold;
        line-height: 120%;
        letter-spacing: 0.07em;
        color: #000000;
  &__form
    width 100%
    form.form-main
      width 100%
      .form_item
        width 100%
        display flex
        justify-content: flex-start;
        &__label
          margin-right: 200px;
        &__input
          width 140%
          padding 10px 0
          border none
          border-bottom 3px solid #0F0F0F
          font-weight: bold;
          font-size: 18px;
          line-height: 22px;
          letter-spacing: 0.07em;
          color: #0F0F0F;
          &::placeholder
            color #0F0F0F
      .form_area
        padding-top: 50px;
        width 100%
        display: flex ;
        flex-direction column
        justify-content: center;
        p.text_18
          padding-bottom 10px
          font-weight: bold;
          line-height: 22px;
          letter-spacing: 0.07em;
          color: #0F0F0F
        textarea.text_18
          border: 3px solid #000000;
          font-weight: bold;
          line-height: 22px;
          letter-spacing: 0.07em;
          color: #0F0F0F
        &__btn
          padding-top 50px
          display flex
          justify-content center
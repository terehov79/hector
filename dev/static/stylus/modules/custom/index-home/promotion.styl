.promotion
  width 100%
  padding: 150px 100px 50px;
  &__content
    width 100%

.head_main
  width: 100%;
  padding-bottom 50px
  display flex
  justify-content: space-between;
  align-items: center;
  h2
    font-weight: 200;
    font-size: 90px;
    line-height: 100%;
    color: #878787;
  a.text_24
    font-weight: 300;
    font-size: 24px;
    line-height: 100%;
    text-transform: uppercase;
    color: #0F0F0F;
    position relative
    padding-right 94px
    &::before
      content ""
      position absolute
      top 50%
      right 0
      width 74px
      height: 1px;
      background-color #0F0F0F

.product_list
  width 100%
  display flex
  justify-content: space-between;
  align-items: center;
  &__item
    width 31%

.slide
  width 100%
  position relative
  overflow hidden
  &:hover
    overflow visible
  &__image
    width 100%
    display block
  &__img
    width 100%
  &__info
    width: 96%;
    background: #FFFFFF;
    border: 1px solid #E7E7E7;
    padding: 32px 24px;
    box-shadow: 32px 67px 65px rgba(0, 0, 0, 0.1);
    display flex
    flex-direction column
    justify-content: space-between;
    align-items: flex-start;
    position absolute
    bottom -100px
    left 50px
    z-index 11
    span.text_36
      font-weight: 500;
      line-height: 100%;
      color: #0F0F0F;
    p.text_24
      font-weight: 300;
      line-height: 130%;
      color: #000000;
      padding: 20px 0 30px;
    a.text_24
      font-weight: 300;
      line-height: 130%;
      color: #0F0F0F;
      position relative
      margin-left 150px
      &::before
        content ""
        position absolute
        top 50%
        left 180px
        width 74px
        height: 1px;
        background-color #0F0F0F